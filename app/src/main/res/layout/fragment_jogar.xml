<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.jogar.JogarFragment"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#9BCC50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_playing"
                android:id="@+id/descriptionImagePokemon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionIdPokemon"
                android:text="NÂº 201"
                android:textSize="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/id_pokemon_color"
                android:fontFamily="@font/flexo_demi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionNamePokemon"
                android:text="Blastoise"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/flexo_demi"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>